<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.moku.davide.spotify_side_project.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/savedTracksRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/playerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:itemCount="50" />

    <RelativeLayout
        android:id="@+id/playerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/player_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp">

        <!-- PREV -->
        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="@dimen/player_nav_button_width"
            android:layout_height="@dimen/player_nav_button_height"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/playButton"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_skip_previous_black_24dp" />

        <!-- PLAY -->
        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="@dimen/player_play_button_width"
            android:layout_height="@dimen/player_play_button_height"
            android:layout_centerInParent="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_play_circle"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <!-- NEXT -->
        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="@dimen/player_nav_button_width"
            android:layout_height="@dimen/player_nav_button_height"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/playButton"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_skip_next_black_24dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
